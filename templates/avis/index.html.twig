    <link rel="stylesheet" type="text/css" href="{{ asset('base.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <header>
        <script src=  {{ asset ('images/main.js')}} ></script>
        <div  style="font-family: Inter; font-size: 64px; font-style: italic; font-weight: 500; line-height: normal;">
            <a href="/base" style="text-decoration: none; color: #038420">EMN-93270</a>
        </div>
        <div>
            <span class="numero">Appelez au : 00 00 00 00 00</span>
            <a href="/devis"><button class="btn btn-light" style="background-color: #038420; border-color: #038420" onmouseover="this.style.transform='scale(1.09)'" onmouseout="this.style.transform='scale(1)'">Obtenir un devis</button></a>
        </div>
    </header>

    <div style="background-color: #038420" class="nav"><ul class="nav justify-content-center " class="sticky-nav">
            <li class="nav-item">
                <a class="hoverL" href="/base" >Accueil</a>
            </li>
            <li class="nav-item">
                <a class="hoverL" href="/description">Description</a>
            </li>
            <li class="nav-item">
                <a class="hoverL" href="/realisations">Réalisations</a>
            </li>
            <li class="nav-item">
                <a class="hoverL" href="/tarifs">Tarifs</a>
            </li>
            <li class="nav-item">
                <a class="hoverL" href="/depannages">Dépannage électrique</a>
            </li>
            <li class="nav-item">
                <a class="hoverL" href="/avis">Avis</a>
            </li>
        </ul>
    </div>

    <div id="progress-bar-container">
        <div id="progress-bar"></div>
    </div>
    <script src=  {{ asset ('images/main.js')}} ></script>

    <main class="avis-section">
        <div class="avis-block">
            <h3>Client 1</h3>
            <p>Très satisfait du service, personnel professionnel et rapide. Je recommande fortement.</p>
        </div>

        <div class="avis-block">
            <h3>Client 2</h3>
            <p>Intervention rapide, tarifs compétitifs. Je referai appel à leurs services sans hésitation.</p>
        </div>

        <div class="avis-block">
            <h3>Client 3</h3>
            <p>Équipe sympathique et compétente. Très content du travail effectué chez moi.</p>
        </div>
    </main>



    <footer>
        <div class="logo">EMN-93270</div>
        <div class="siret">
            <p>N°Siret : 814 782 538 00031   N°TVA intra : FR06814782538</p>
        </div>
        <div>
            <p class="numero">Mentions Légales</p>
            <p class="numero">Contact : contact@example.com</p>
        </div>
    </footer>
    <div id="popup" class="popup">
        <div class="popup-contenu">
            <span class="fermer" onclick="fermerPopup()">&times;</span>
            <h2>Obtenir un devis</h2>

            <!-- Champs à remplir -->
            <label for="nom">Nom :</label>
            <input type="text" id="nom" name="nom" required>

            <label for="telephone">Téléphone :</label>
            <input type="text" id="telephone" name="telephone" required>

            <label for="mail">Mail :</label>
            <input type="email" id="mail" name="mail" required>

            <label for="description">Description du devis :</label>
            <textarea id="description" name="description" required></textarea>

            <!-- Bouton d'envoi -->
            <button onclick="envoyerDevis()">Envoyer</button>
        </div>
    </div>

{% endblock %}
